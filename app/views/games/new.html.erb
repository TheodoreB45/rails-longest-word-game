<ul class="d-flex justify-content-between list-unstyled col-3 p-3">
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<form action="/score" data-turbo="false" >
  <label for="exampleFormControlInput1" class="form-label" <%= hidden_field_tag :authenticity_token, form_authenticity_token %>>Enter your word:</label>
  <input type="text" name="word" class="form-control" value="<%= params[:word] %>">
  <%= hidden_field_tag :grid, @letters %>
  <input type="submit" value="Enter">
</form>
